{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/dhoeric/features/google-cloud-cli:1": {}
  },
  "forwardPorts": [8080],
  "postCreateCommand": "echo 'Make sure to expose port 8080 in your container settings to access it publicly.'",
  "customizations": {
    "vscode": {
      "extensions": [
        "github.vscode-github-actions",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}